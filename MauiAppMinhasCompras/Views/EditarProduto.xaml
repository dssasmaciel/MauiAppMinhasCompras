<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descricao}"
             BackgroundColor="LightSlateGray">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="15">

            <Label Text="Descrição do Produto:" />
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}" BackgroundColor="White"/>

            <Label Text="Quantidade:" />
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}" Keyboard="Numeric" BackgroundColor="White" />

            <Label Text="Preço Unitário:" />
            <Entry x:Name="txt_preco" Text="{Binding Preco}" Keyboard="Numeric" BackgroundColor="White" />
        </VerticalStackLayout>

        <Button Grid.Row="1" 
        Text="Salvar" 
        Clicked="ToolbarItem_Clicked"
        Margin="15"    
        HorizontalOptions="Center"
        Background="MediumSeaGreen"        
        WidthRequest="200" />
        
    </Grid>
</ContentPage>